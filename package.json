{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/libton-project/libton"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/config-lerna-scopes": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "commitizen": "^4.0.3",
    "cross-env": "^5.2.0",
    "husky": "^3.0.4",
    "lerna": "^3.15.0"
  },
  "scripts": {
    "commit": "git-cz",
    "update-version": "cross-env HUSKY_BYPASS=true lerna version",
    "release": "cross-env HUSKY_BYPASS=true lerna publish from-git"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "[ -n \"$HUSKY_BYPASS\" ] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run pre-commit"
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}
