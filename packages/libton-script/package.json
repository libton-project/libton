{
  "name": "libton-script",
  "version": "0.0.0",
  "description": "Configuration and scripts for libton",
  "repository": {
    "type": "git",
    "url": "https://github.com/libton-project/libton",
    "directory": "packages/libton-scripts"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "libton-script": "./dist/bin/libton-scripts.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "pre-commit": "lint-staged",
    "format": "prettier --write 'src/**/*.{js,ts,md}'",
    "format:check": "prettier --list-different 'src/**/*.{js,ts,md}'"
  },
  "lint-staged": {
    "src/**/*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3"
  }
}
