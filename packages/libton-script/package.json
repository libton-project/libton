{
  "name": "libton-script",
  "version": "0.0.0",
  "description": "Configuration and scripts for libton",
  "repository": {
    "type": "git",
    "url": "https://github.com/libton-project/libton",
    "directory": "packages/libton-scripts"
  },
  "license": "MIT",
  "files": [
    "bin",
    "config",
    "lib",
    "scripts",
    "utils"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "libton-script": "./bin/libton-scripts.js"
  },
  "scripts": {
    "pre-commit": "lint-staged",
    "format": "prettier --write '{src,bin}/**/*.{js,ts,md}'",
    "format:check": "prettier --list-different '{src,bin}/**/*.{js,ts,md}'"
  },
  "lint-staged": {
    "{src,bin}/**/*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  }
}
