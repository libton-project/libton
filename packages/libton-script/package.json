{
  "name": "libton-script",
  "version": "0.3.2",
  "description": "Configuration and scripts for libton",
  "repository": {
    "type": "git",
    "url": "https://github.com/libton-project/libton",
    "directory": "packages/libton-scripts"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "libton-script": "./dist/bin/libton-scripts.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prepublishOnly": "yarn build",
    "lint": "eslint src/**/*ts --max-warnings 0",
    "test": "jest",
    "pre-commit": "lint-staged && yarn lint",
    "format": "prettier --write 'src/**/*.{js,ts,md}'",
    "format:check": "prettier --list-different 'src/**/*.{js,ts,md}'"
  },
  "lint-staged": {
    "src/**/*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.0",
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.137",
    "@types/node": "^12.7.2",
    "@types/prettier": "^1.18.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-destructuring": "^7.5.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@microsoft/api-extractor": "^7.3.8",
    "babel-plugin-macros": "^2.6.1",
    "camelcase": "^5.3.1",
    "colorette": "^1.1.0",
    "cross-spawn": "^6.0.5",
    "decamelize": "^3.2.0",
    "eslint": "^6.2.2",
    "eslint-plugin-react-app": "^6.0.1",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "pretty-ms": "^5.0.0",
    "read-pkg": "^5.2.0",
    "rollup": "^1.20.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
